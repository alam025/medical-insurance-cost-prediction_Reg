# ========================================
# Medical Insurance Cost Prediction
# Environment Configuration File
# ========================================
# Copy this file to .env and update with your values
# NEVER commit the actual .env file to version control!

# ========================================
# LINEAR REGRESSION MODEL PARAMETERS
# ========================================

# Normalize features before training (true/false)
NORMALIZE_FEATURES=true

# Normalize method: 'standard' (StandardScaler), 'minmax' (MinMaxScaler)
NORMALIZATION_METHOD=standard

# Train-test split ratio (0.0-1.0)
TEST_SIZE=0.2

# Random state for reproducibility (integer or None)
RANDOM_STATE=42

# Enable model fitting statistics (true/false)
CALCULATE_R2_SCORE=true

# Calculate Mean Squared Error (true/false)
CALCULATE_MSE=true

# Calculate Mean Absolute Error (true/false)
CALCULATE_MAE=true

# ========================================
# DATA PREPROCESSING
# ========================================

# Handle missing values: 'drop', 'mean', 'median', 'forward_fill'
MISSING_VALUES_STRATEGY=drop

# Outlier detection method: 'zscore', 'iqr', 'isolation_forest', 'none'
OUTLIER_DETECTION=none

# Z-score threshold for outlier detection (if using zscore)
ZSCORE_THRESHOLD=3.0

# IQR multiplier for outlier detection (if using iqr)
IQR_MULTIPLIER=1.5

# ========================================
# FEATURE ENGINEERING
# ========================================

# Encode categorical features (true/false)
ENCODE_CATEGORICAL=true

# Sex encoding: male value (typically 0 or 1)
SEX_MALE_VALUE=0
SEX_FEMALE_VALUE=1

# Smoker encoding: yes value
SMOKER_YES_VALUE=0
SMOKER_NO_VALUE=1

# Region encoding values
REGION_SOUTHEAST=0
REGION_SOUTHWEST=1
REGION_NORTHEAST=2
REGION_NORTHWEST=3

# Create polynomial features (true/false)
CREATE_POLYNOMIAL_FEATURES=false
POLYNOMIAL_DEGREE=2

# Create interaction features (true/false)
CREATE_INTERACTION_FEATURES=false

# ========================================
# DATA PATHS
# ========================================

# Input data file path
DATA_PATH=insurance.csv

# Output directory for results
OUTPUT_DIR=outputs/

# Model save path
MODEL_SAVE_PATH=models/insurance_prediction_model.pkl

# Model metadata file
MODEL_METADATA_PATH=models/model_metadata.json

# Predictions output file
PREDICTIONS_OUTPUT_PATH=outputs/insurance_predictions.csv

# ========================================
# VISUALIZATION SETTINGS
# ========================================

# Figure size for plots (width,height in inches)
FIGURE_WIDTH=10
FIGURE_HEIGHT=6

# DPI for saving plots (resolution)
PLOT_DPI=300

# Color palette: 'viridis', 'plasma', 'coolwarm', 'RdYlGn', 'Spectral'
COLOR_PALETTE=coolwarm

# Save plots automatically (true/false)
AUTO_SAVE_PLOTS=true

# Display plots on screen (true/false)
DISPLAY_PLOTS=true

# Plot format: 'png', 'jpg', 'svg', 'pdf'
PLOT_FORMAT=png

# Visualization style: 'seaborn', 'ggplot', 'default'
VISUALIZATION_STYLE=seaborn

# ========================================
# MODEL EVALUATION METRICS
# ========================================

# Calculate metrics on training data (true/false)
EVAL_TRAINING_DATA=true

# Calculate metrics on testing data (true/false)
EVAL_TESTING_DATA=true

# Cross-validation folds (for future CV implementation)
CV_FOLDS=5

# Calculate residuals (true/false)
CALCULATE_RESIDUALS=true

# ========================================
# PREDICTION SETTINGS
# ========================================

# Default prediction type: 'single', 'batch', 'interactive'
PREDICTION_TYPE=single

# Save predictions to file (true/false)
SAVE_PREDICTIONS=true

# Include confidence intervals in predictions (true/false)
INCLUDE_CONFIDENCE_INTERVALS=true

# Confidence level for intervals (0.0-1.0)
CONFIDENCE_LEVEL=0.95

# ========================================
# PERFORMANCE & OPTIMIZATION
# ========================================

# Number of CPU cores to use (-1 for all cores)
N_JOBS=1

# Enable verbose output (0=silent, 1=minimal, 2=detailed)
VERBOSE=1

# Memory optimization mode (true/false)
LOW_MEMORY_MODE=false

# Batch processing size (for large datasets)
BATCH_SIZE=1000

# ========================================
# DATABASE CONNECTION (Optional)
# ========================================
# Uncomment and configure if reading from/writing to database

# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=insurance_analytics
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_TABLE=customers
# DB_ENCRYPTED=true

# ========================================
# API INTEGRATION (Optional)
# ========================================
# Uncomment if integrating with external services

# API_TYPE=rest
# API_ENDPOINT=https://your-api.com/predict
# API_KEY=your_api_key_here
# API_TIMEOUT=30
# ENABLE_CACHING=true

# ========================================
# HEALTHCARE & COMPLIANCE SETTINGS
# ========================================

# HIPAA Compliance mode (true/false)
HIPAA_COMPLIANCE_MODE=true

# Enable audit logging (true/false)
ENABLE_AUDIT_LOG=true

# Audit log file path
AUDIT_LOG_PATH=logs/audit.log

# Anonymize all outputs (true/false)
ANONYMIZE_OUTPUTS=true

# Encrypt sensitive data (true/false)
ENCRYPT_SENSITIVE_DATA=false

# Data retention period in days (0 = keep forever)
DATA_RETENTION_DAYS=365

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/insurance_prediction.log

# Enable console logging (true/false)
CONSOLE_LOGGING=true

# Log rotation: max file size in MB
LOG_MAX_SIZE=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# Log format: 'simple', 'detailed', 'json'
LOG_FORMAT=detailed

# ========================================
# ADVANCED SETTINGS
# ========================================

# Enable GPU acceleration if available (true/false)
USE_GPU=false

# Enable model interpretability features (true/false)
ENABLE_INTERPRETABILITY=true

# Calculate SHAP values for predictions (true/false)
CALCULATE_SHAP_VALUES=false

# Feature importance calculation method: 'coefficients', 'permutation'
FEATURE_IMPORTANCE_METHOD=coefficients

# Enable model profiling (true/false)
ENABLE_PROFILING=false

# Experiment tracking (mlflow, wandb, none)
EXPERIMENT_TRACKING=none

# ========================================
# BUSINESS METRICS TRACKING
# ========================================

# Track prediction accuracy by age group (true/false)
TRACK_BY_AGE=true

# Track prediction accuracy by gender (true/false)
TRACK_BY_GENDER=true

# Track prediction accuracy by region (true/false)
TRACK_BY_REGION=true

# Track prediction accuracy by smoker status (true/false)
TRACK_BY_SMOKER=true

# Generate fairness report (true/false)
GENERATE_FAIRNESS_REPORT=true

# ========================================
# ALERTS & NOTIFICATIONS (Optional)
# ========================================

# Email notifications for completed runs (true/false)
# EMAIL_NOTIFICATIONS=false
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_FROM=your_email@gmail.com
# EMAIL_TO=recipient@company.com
# EMAIL_PASSWORD=your_app_password

# Slack webhook for notifications
# SLACK_NOTIFICATIONS=false
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ========================================
# SECURITY SETTINGS
# ========================================

# Enable security checks (true/false)
ENABLE_SECURITY_CHECKS=true

# Data validation mode: 'strict', 'lenient', 'none'
DATA_VALIDATION_MODE=strict

# Enable input sanitization (true/false)
ENABLE_INPUT_SANITIZATION=true

# Maximum file upload size in MB
MAX_UPLOAD_SIZE=100

# Allowed file formats (comma-separated)
ALLOWED_FILE_FORMATS=csv,xlsx,xls,json

# ========================================
# TESTING & DEVELOPMENT
# ========================================

# Enable test mode (true/false)
TEST_MODE=false

# Use synthetic data for testing (true/false)
USE_SYNTHETIC_DATA=false

# Random seed for synthetic data generation
SYNTHETIC_DATA_SEED=42

# Run performance benchmarks (true/false)
RUN_BENCHMARKS=false

# ========================================
# NOTES
# ========================================
# 1. Keep this file in .gitignore to protect sensitive data
# 2. Use strong passwords for any API keys or database credentials
# 3. Ensure HIPAA_COMPLIANCE_MODE=true for healthcare deployments
# 4. Test changes in TEST_MODE=true before production use
# 5. Regularly review and update security settings
# 6. Keep audit logs for compliance purposes
# 7. Monitor LOG_LEVEL for production deployments
# 8. Use ANONYMIZE_OUTPUTS=true for sensitive healthcare data
# 9. Verify all predictions make clinical sense before deployment
# 10. Maintain MODEL_METADATA_PATH for model tracking and validation